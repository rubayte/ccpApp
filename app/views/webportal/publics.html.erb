<div class="row-fluid">
      <div class="container">
        <h2>Combat-Cancer Project</h2>
        <hr>
        <p>
        	<span title="Edit this content">
				<%= link_to '<i class="icon-edit"> &nbsp; Edit this section </i>'.html_safe, {:controller => "webportal", :action => "publics",:sectionedit => "true", :sectionName => "project" } %>
			</span>
        </p>
        <p>
        <% if @editsection == "true" && @sectionToEdit == "project.wiki" -%>

        	<%= form_tag({:controller => 'webportal',:action => 'editPublicSection'}, :multipart => true) do %>
	        	<%= hidden_field_tag :pageSection , "project" %></br>
				<%= text_area_tag :pageDesc , @contents, :class => "tinymce" , :rows => 20, :cols => 120 %></br>
				<%= tinymce  %>
				<%= submit_tag "Save", :class => 'btn btn-primary btn-medium' %>&nbsp; <a class="btn btn-danger" href="publics">Cancel</a>
			<% end -%>	
			
        <% else -%>
        	<% File.open(Rails.root.join('publicContent',"project.wiki"), 'rb') do |infile| -%>
				<% while line = infile.gets() -%>
					<% if line =~ /<(.*)>/%>
						<%= line.html_safe %>
					<% else -%>	
						<%= line %>
					<% end -%>	
				<% end -%>
			<% end -%>
		<% end -%>	
        </p>
      </div>
</div>	

