<div class="row-fluid">
	<div class="container">

    	<div class="span12">

			<%= form_tag({:controller => 'webportal',:action => 'newPage'}, :multipart => true) do %>
				Page name: &nbsp; <%= text_field_tag :pageName , @pagename %></br>
				Page body: &nbsp; </br>
				<%= text_area_tag :pageDesc , @pagedesc  , :class => "tinymce" , :rows => 20, :cols => 120 %></br>
				<%= tinymce  %>
				Attach file: <%= file_field_tag 'afile' %><br>
				<%= submit_tag "Save", :class => 'btn btn-primary btn-medium' %> &nbsp; <a class="btn btn-danger" href="wiki">Cancel</a>
			<% end -%>	
					
		</div>	
			
	</div>
</div>

