<div class="row-fluid">
	<div class="container">
    	<div class="span12">
			
			<h3>
				<%= @file  %>
			</h3>
			<p>
				(edit mode)
			</p>	
			<p>
				<%= form_tag({:controller => 'webportal',:action => 'editWikiFiles'}, :multipart => true) do %>
				<%= hidden_field_tag :pageName , @file %></br>
				Page body: &nbsp; 
				<%= text_area_tag :pageDesc , @contents, :class => "tinymce" , :rows => 20, :cols => 120 %></br>
				<%= tinymce  %>
				Attach file: <%= file_field_tag 'afile' %></br>
				<%= submit_tag "Save", :class => 'btn btn-primary btn-medium' %>&nbsp; <a class="btn btn-danger" href="wiki">Cancel</a>
				<% end -%>	
			</p>			
			</div>
		</div>
</div>